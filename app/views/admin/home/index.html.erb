<% provide :pre_title, t("console-nav.summary") + ' | ' + t("console") %>
<% provide :bodyclass, "admin" %>
<% provide :index, '0' %>
<div id="summary">
  <div class="boxed-group">
    <%= content_tag :h3, t("console-nav.summary") %>
    <div class="boxed-group-inner">

      <div class="summary-group" id="users">
        <%= content_tag :h4, class: 'title' do -%>
          <%= link_to content_tag(:span, @summary[:user][:total] > 0 ? t("c-summary.user.other", size: @summary[:user][:total]) : t("c-summary.user.zero") ), admin_users_path %>
          <a data-toggle="collapse" href="#user-table">
            <span class="caret pull-right" ></span>
          </a>
        <% end -%>
        <div class="collapse in" id="user-table">
          <table class="table" >
            <tbody>
              <tr>
                <td>
                  <%= content_tag :a, href: admin_users_path(by: 'normal') do -%>
                    <%= content_tag :span, t("c-summary.user.normal"), class: 'name' %>
                    <%= content_tag :span, @summary[:user][:normal], class: 'count' %>
                  <% end -%>
                </td>
                <td >
                  <%= content_tag :a, href: admin_users_path(by: 'admin') do -%>
                    <%= content_tag :span, t("c-summary.user.admin"), class: 'name' %>
                    <%= content_tag :span, @summary[:user][:admin], class: 'count' %>
                  <% end -%>
                </td>
                <td >
                  <%= content_tag :a, href: admin_users_path(by: 'disabled') do -%>
                    <%= content_tag :span, t("c-summary.user.disabled"), class: 'name' %>
                    <%= content_tag :span, @summary[:user][:disabled], class: 'count' %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="summary-group" id="articles">
        <%= content_tag :h4, class: 'title' do -%>
          <%= link_to content_tag(:span, @summary[:article][:total] > 0 ? t("c-summary.article.other", size: @summary[:article][:total]) : t("c-summary.article.zero") ), '#' %>

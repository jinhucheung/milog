            <span class="caret pull-right" ></span>
          </a>
        <% end -%>

        <div class="collapse in" id="article-table">
          <table class="table" >
            <tbody>
              <tr>
                <td>
                  <%= content_tag :a, href: '#' do -%>
                    <%= content_tag :span, t("c-summary.posted"), class: 'name' %>
                    <%= content_tag :span, @summary[:article][:posted], class: 'count' %>
                  <% end -%>
                </td>
                <td >
                  <%= content_tag :a, href: '#' do -%>
                    <%= content_tag :span, t("c-summary.not_post"), class: 'name' %>
                    <%= content_tag :span, @summary[:article][:unposted], class: 'count' %>
                  <% end -%>

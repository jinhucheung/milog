<head>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= favicon_link_tag 'favicon.ico' %>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <% if signed_in? %>
    <% notify_count = Notification.unread_count(current_user) %>
    <%= tag :meta, name: "current-user", data: { username: current_user.username, email: current_user.email, avatar_url: current_user.user_avatar? ? current_user.avatar.url : current_user.letter_avatar_url(120), notify_count: notify_count} %>
  <% end %>
  <title><%= title yield(:pre_title) %></title>    
  
  <script>
    App.locale = "<%= I18n.locale %>";
  </script>
</head>
